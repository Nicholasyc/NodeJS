<%- include header.ejs%>
        <div class="container">
            <%if(warn) { %>
            <div class="alert alert-danger text-center" style="margin-bottom:20px;color:red;"><%=warn%></div>
            <%}%>
            <form class="col-sm-offset-4 col-sm-4 form-horizontal" role="form" method="post">
                <fieldset>
                    <legend></legend>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p class="text-center page-title">新用户注册</p>
                        </div>
                        <div class="panel-body m15">
                            <div class="form-group">
                                <div class="input-group nav-login">
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                        </span>
                                    <input type="text" class="form-control" name="username" placeholder="请输入用户名" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group nav-login">
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                        </span>
                                    <input type="password" class="form-control" name="password" placeholder="请输入密码" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group nav-login">
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                        </span>
                                    <input type="password" class="form-control" name="passwordRepeat" placeholder="请再次输入密码" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary col-lg-11 btn-left">注册</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
<%- include footer.ejs%>

