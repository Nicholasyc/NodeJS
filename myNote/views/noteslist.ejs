<%- include header.ejs%>
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <caption>我的笔记列表</caption>
            <thead>
            <tr>
                <th>标题</th>
                <th>标签</th>
                <th>日期</th>
            </tr>
            </thead>
            <tbody>
            <% if (notes.length > 0) {%>
            <% for (var i in notes) {%>
            <tr>
                <td><a href="/detail?title=<%= notes[i].title %>"><%= notes[i].title %></a></td>
                <td><%= notes[i].tag %></td>
                <td><%= moment(notes[i].createTime).locale('zh-cn').format('LL HH:mm:ss') %></td>
            </tr>
            <% } %>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
